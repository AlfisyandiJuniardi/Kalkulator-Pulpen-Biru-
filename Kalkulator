#include<iostream>
using namespace std;
class Kalkulator{
  public:
  float a,b;
};

double tambah(float x, float y){
    return x+y;
  }
double kurang(float x, float y){
    return x-y;
  }
double bagi(float x, float y){
    return x/y;
  }
double kali(float x, float y){
    return x*y;
  }

int main(){
  Kalkulator obj;
  cout<<"Masukkan Angka ke-1 = ";
  cin>>obj.a;
  cout<<"Masukkan Angka ke-2 = ";
  cin>>obj.b;
  cout<<"Hasil Penambahan = "<<tambah(obj.a,obj.b)<<endl;
  cout<<"Hasil Pengurangan = "<<kurang(obj.a,obj.b)<<endl;
  cout<<"Hasil Pembagian = "<<bagi(obj.a,obj.b)<<endl;
  cout<<"Hasil Perkalian = "<<kali(obj.a,obj.b);
}
